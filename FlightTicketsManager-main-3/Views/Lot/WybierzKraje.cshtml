
@{
    ViewData["Title"] = "Wybierz kraje";
}

<h2>Wybierz kraj przylotu i kraj wylotu</h2>

<form asp-action="DodajLot" method="get">
    <div class="form-group">
        <label for="selectedKrajWylotu">Kraj wylotu:</label>
        <select id="selectedKrajWylotu" name="selectedKrajWylotu" class="form-control">
            <option value="">Wybierz kraj</option>
            @foreach (var kraj in ViewBag.Kraje)
            {
                <option value="@kraj">@kraj</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="selectedKrajPrzylotu">Kraj przylotu:</label>
        <select id="selectedKrajPrzylotu" name="selectedKrajPrzylotu" class="form-control">
            <option value="">Wybierz kraj</option>
            @foreach (var kraj in ViewBag.Kraje)
            {
                <option value="@kraj">@kraj</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Dalej</button>
</form>
<p>
    <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
</p>
