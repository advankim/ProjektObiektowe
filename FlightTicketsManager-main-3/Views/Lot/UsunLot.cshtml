@model ProjektObiektowe.Models.Lot

@{
    ViewData["Title"] = "Usuń Lot";
}

<h3>Czy na pewno chcesz usunąć ten lot?</h3>


@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="UsunLot" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Numer Lotu
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Numer)
            </dd>
            <dt class="col-sm-2">
                Czas Wylotua
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Czas_Wylot)
            </dd>
            <dt class="col-sm-2">
                Czas Przylotu
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Czas_Przylot)
            </dd>
            <dt class="col-sm-2">
                Lotnisko Wylotu
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Lotnisko_Wylot.Nazwa)
            </dd>
            <dt class="col-sm-2">
                Lotnisko Przylotu
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Lotnisko_Przylot.Nazwa)
            </dd>
            <dt class="col-sm-2">
                Samolot
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Samolot.Numer)
            </dd>
        </dl>
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </div>
</form>
