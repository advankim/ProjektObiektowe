@model ProjektObiektowe.Models.Lot

@{
    ViewData["Title"] = "Edytuj kraje";
}

<h2>Wybierz kraj przylotu i kraj wylotu</h2>

<form asp-action="EdytujKraje" method="post">
    <input type="hidden" name="id" value="@ViewBag.LotId" />
    <div class="form-group">
        <label for="selectedKrajWylotu">Kraj wylotu:</label>
        @Html.DropDownList("selectedKrajWylotu", ViewBag.SelectedKrajWylotu as SelectList, "Wybierz kraj", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="selectedKrajPrzylotu">Kraj przylotu:</label>
        @Html.DropDownList("selectedKrajPrzylotu", ViewBag.SelectedKrajPrzylotu as SelectList, "Wybierz kraj", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Dalej</button>
</form>
<p>
    <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
</p>
