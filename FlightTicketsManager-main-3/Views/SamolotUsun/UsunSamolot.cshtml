@model ProjektObiektowe.Models.Samolot

@{
    ViewData["Title"] = "Usuń Samoltot";
}

<h3>Czy na pewno chcesz usunąć ten samolot?</h3>

<form asp-action="UsunSamolot" asp-controller="SamolotUsun" method="post">
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Kod
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Numer)
            </dd>
            <dt class="col-sm-2">
                Nazwa
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Marka)
            </dd>
            <dt class="col-sm-2">
                Miasto
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Model)
            </dd>
            <dt class="col-sm-2">
                Kraj
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Pojemnosc)
            </dd>
        </dl>
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a asp-action="Index" asp-controller="SamolotIndex" class="btn btn-secondary">Anuluj</a>
    </div>
</form>
