@model ProjektObiektowe.Models.Lot


<h2>Potwierdzenie Lotu</h2>

<div>
    <h4>Lot</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Numer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Numer)
        </dd>
        <dt class="col-sm-2">
            Czas Wylotu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Czas_Wylot)
        </dd>
        <dt class="col-sm-2">
            Czas Przylotu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Czas_Przylot)
        </dd>
        <dt class="col-sm-2">
            Lotnisko Wylotu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lotnisko_Wylot.Nazwa)
        </dd>
        <dt class="col-sm-2">
            Lotnisko Przylotu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lotnisko_Przylot.Nazwa)
        </dd>
        <dt class="col-sm-2">
            Samolot
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Samolot.Numer)
        </dd>
    </dl>
</div>

<p>
    <a asp-action="Index" class="btn btn-primary">Wróć do listy lotów</a>
</p>
