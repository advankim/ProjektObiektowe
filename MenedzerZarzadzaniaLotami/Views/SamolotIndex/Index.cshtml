@model IEnumerable<ProjektObiektowe.Models.Samolot>

<p>
    <a asp-action="DodajSamolot" asp-controller="SamolotDodaj" class="btn btn-primary">Dodaj nowy samolot</a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pojemnosc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rzedy_Klasa_1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rzedy_Klasa_2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Linia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Marka)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Numer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pojemnosc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rzedy_Klasa_1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rzedy_Klasa_2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Linia)
                </td>
                <td>
                    <a asp-action="EdytujSamolot" asp-controller="SamolotEdytuj" asp-route-id="@item.Id">Edytuj</a> |
                    <a asp-action="UsunSamolot" asp-controller="SamolotUsun" asp-route-id="@item.Id">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
