@model ProjektObiektowe.Models.Lot

@{
    ViewData["Title"] = "Usuń Lot";
}

<h3>Czy na pewno chcesz usunąć ten lot?</h3>
<form asp-action="UsunLot" method="post">
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Numer Lotu
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Numer)
            </dd>
            <dt class="col-sm-2">
                Czas Wylotu
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Czas_Wylot)
            </dd>
            <dt class="col-sm-2">
                Czas Przylotu
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Czas_Przylot)
            </dd>
            <dt class="col-sm-2">
                Lotnisko Wylotu
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Lotnisko_Wylot.Nazwa)
            </dd>
            <dt class="col-sm-2">
                Lotnisko Przylotu
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Lotnisko_Przylot.Nazwa)
            </dd>
            <dt class="col-sm-2">
                Samolot
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Samolot.Numer)
            </dd>
        </dl>
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </div>
</form>
